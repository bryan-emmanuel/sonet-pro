<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.piusvelte.sonet"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<Button android:id="@+id/comments" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/comments"
		android:layout_alignParentTop="true" android:enabled="false"
		android:layout_alignParentRight="true" />
	<Button android:id="@+id/accounts" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/accounts"
		android:enabled="false" android:layout_toLeftOf="@id/comments"
		android:layout_alignParentLeft="true" />
	<RelativeLayout android:id="@+id/buttons"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<com.admob.android.ads.AdView android:id="@+id/ad"
			android:visibility="gone" android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true" app:backgroundColor="@color/tertiary"
			app:primaryTextColor="@color/primary" app:secondaryTextColor="@color/secondary" />
		<Button android:id="@+id/send" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/send"
			android:layout_alignParentRight="true" android:enabled="false" />
		<Button android:id="@+id/like" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/like"
			android:layout_toLeftOf="@id/send" android:enabled="false" />
		<Button android:id="@+id/location" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/location"
			android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/like"
			android:layout_above="@id/ad" android:enabled="false" />
	</RelativeLayout>
	<EditText android:id="@+id/post" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/accounts"
		android:layout_above="@id/buttons" android:gravity="top" />
	<TextView android:id="@+id/count" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignBottom="@id/post"
		android:layout_alignParentRight="true" android:padding="8dip"
		android:background="#33000000" android:textColor="#66000000"
		android:textStyle="bold" android:text="0" />
</RelativeLayout>