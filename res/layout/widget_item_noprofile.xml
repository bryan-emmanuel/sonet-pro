<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/item" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<TextView android:paddingBottom="4dip" android:id="@+id/friend_bg_clear"
		android:singleLine="true" android:layout_alignParentLeft="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:textStyle="bold"
		android:textColor="#00000000"
		android:paddingLeft="4dip" android:paddingTop="4dip" />
	<TextView android:layout_below="@id/friend_bg_clear"
		android:id="@+id/message_bg_clear" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:textColor="#00000000"
		android:paddingLeft="4dip" android:paddingRight="4dip"
		android:paddingBottom="4dip" />
	<TextView android:id="@+id/bg_clear" android:layout_width="fill_parent"
		android:layout_alignParentLeft="true" android:height="0dip"
		android:layout_height="wrap_content" android:layout_below="@id/message_bg_clear"
		android:textColor="#00000000" />
	<ImageView android:id="@+id/friend_bg" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:scaleType="fitXY"
		android:layout_above="@id/message_bg_clear" />
	<ImageView android:id="@+id/status_bg" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:scaleType="fitXY"
		android:layout_above="@id/bg_clear" android:layout_below="@id/friend_bg" />
	<TextView android:layout_marginRight="4dip" android:paddingBottom="4dip" android:id="@+id/friend"
		android:singleLine="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:textStyle="bold"
		android:paddingTop="4dip" android:paddingLeft="4dip" />
	<TextView android:gravity="right" android:id="@+id/created"
		android:singleLine="true" android:layout_toRightOf="@id/friend"
		android:layout_alignParentRight="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:paddingTop="4dip" android:paddingRight="4dip" />
	<TextView android:layout_below="@id/friend" android:id="@+id/message"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/loading"
		android:paddingRight="4dip" android:paddingBottom="4dip" android:paddingLeft="4dip" />
	<ImageView android:id="@+id/icon" android:layout_width="16dip"
		android:layout_height="16dip" android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true" android:paddingBottom="4dip"
		android:paddingRight="4dip" />
</RelativeLayout>