<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.piusvelte.sonet"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<com.admob.android.ads.AdView android:id="@+id/ad"
		android:visibility="gone" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		app:backgroundColor="@color/tertiary" app:primaryTextColor="@color/primary"
		app:secondaryTextColor="@color/secondary" />
	<ScrollView android:layout_below="@id/ad" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:orientation="vertical">
			<Button android:id="@+id/interval" android:text="@string/interval"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<CheckBox android:id="@+id/hasbuttons" android:text="@string/hasbuttons"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/buttons_bg_color" android:text="@string/buttons_bg_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/buttons_color" android:text="@string/buttons_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/buttons_textsize" android:text="@string/buttons_textsize"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/messages_bg_color" android:text="@string/message_bg_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/messages_color" android:text="@string/message_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/messages_textsize" android:text="@string/messages_textsize"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/friend_color" android:text="@string/friend_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/friend_textsize" android:text="@string/friend_textsize"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/created_color" android:text="@string/created_color"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<Button android:id="@+id/created_textsize" android:text="@string/created_textsize"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<CheckBox android:id="@+id/time24hr" android:text="@string/time24hr"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<CheckBox android:id="@+id/icon" android:text="@string/icon"
				android:layout_width="fill_parent" android:layout_height="wrap_content" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
