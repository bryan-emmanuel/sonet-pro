<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.piusvelte.sonet"
	android:layout_width="wrap_content" android:layout_height="fill_parent">
	<ImageView android:id="@+id/profile" android:layout_width="48dip"
		android:layout_height="48dip" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" android:layout_marginRight="4dip"
		android:paddingTop="4dip" android:paddingBottom="4dip"
		android:paddingLeft="4dip" />
	<TextView android:layout_marginRight="4dip" android:id="@+id/friend"
		android:singleLine="true" android:layout_toRightOf="@id/profile"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:textStyle="bold"
		android:paddingTop="4dip" />
	<TextView android:gravity="right" android:id="@+id/created"
		android:singleLine="true" android:layout_toRightOf="@id/friend"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true"
		android:paddingTop="4dip" android:paddingRight="4dip" />
	<TextView android:gravity="right" android:id="@+id/like"
		android:singleLine="true" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true" android:paddingTop="4dip"
		android:paddingRight="4dip" android:text="@string/like" />
	<TextView android:layout_below="@id/friend" android:id="@+id/message"
		android:layout_toRightOf="@id/profile" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingRight="4dip"
		android:paddingBottom="4dip" />
</RelativeLayout>
