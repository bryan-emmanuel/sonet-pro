<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.piusvelte.sonet" android:versionCode="178"
	android:versionName="1.7.8" android:installLocation="auto">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".About" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ManageAccounts">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
			</intent-filter>
		</activity>
		<activity android:name=".Settings" />
		<activity android:name=".AccountSettings" />
		<activity android:name=".OAuthLogin">
		</activity>
		<activity android:name=".PostDialog" android:theme="@android:style/Theme.Translucent.NoTitleBar" />
		<activity android:name=".StatusDialog" android:theme="@android:style/Theme.Translucent.NoTitleBar" />
		<activity android:name="com.myspace.sdk.MSLoginActivity" />
        <activity android:name="com.admob.android.ads.AdMobActivity" 
              android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
              android:configChanges="orientation|keyboard|keyboardHidden"
              />
		<!-- Broadcast Receiver that will process AppWidget updates -->
		<receiver android:name=".SonetWidget_4x2" android:label="@string/sonet_4x2">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_4x2" />
            <meta-data android:name="LauncherMetadata.Requirements.APIVersion" android:value="2" />
            <meta-data android:name="LauncherMetadata.Requirements.Scrollable" android:value="true" />
		</receiver>
		<receiver android:name=".SonetWidget_4x3" android:label="@string/sonet_4x3">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_4x3" />
            <meta-data android:name="LauncherMetadata.Requirements.APIVersion" android:value="2" />
            <meta-data android:name="LauncherMetadata.Requirements.Scrollable" android:value="true" />
        </receiver>
        <receiver android:name=".SonetWidget_4x4" android:label="@string/sonet_4x4">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_4x4" />
            <meta-data android:name="LauncherMetadata.Requirements.APIVersion" android:value="2" />
            <meta-data android:name="LauncherMetadata.Requirements.Scrollable" android:value="true" />
        </receiver>
        <receiver android:name=".SonetWidget">
			<intent-filter>
				<action android:name="com.piusvelte.sonet.Sonet.REFRESH" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.piusvelte.sonet.Sonet.BUILD_SCROLL" />
			</intent-filter>
        </receiver>
        <service android:name=".SonetService" />
        <provider
            android:name=".SonetProvider"
            android:authorities="com.piusvelte.sonet.SonetProvider"
            android:multiprocess="true"
            android:grantUriPermissions="true" />
		<!-- The application's publisher ID assigned by AdMob -->
    	<meta-data android:value="a14d5598b4afd11" android:name="ADMOB_PUBLISHER_ID" />
    </application>
    
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk android:minSdkVersion="6" />

</manifest> 
